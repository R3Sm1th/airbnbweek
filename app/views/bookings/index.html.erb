<div class="container col-12 col-lg-8 title">
  <div class="asset-banner">
    <h1 class="mt-3">My Bookings</h1>
  </div>
  <div class=container>
    <% @bookings.each do |booking| %>
    <div class="card text-center my-2">
      <div class="card-header">
        <%= booking.property.address %>
      </div>
      <div class="d-flex">
        <div class="col-8">
          <div class="card-body">
            <p class="card-text">Start Date: <%= booking.start %></p>
            <p class="card-text">End Date: <%= booking.end %></p>
            <p class="card-text">Price: Â£<%= booking.total %></p>
            <div class="">
              <%= link_to "Listing Details", property_path(booking.property), class: "btn btn-primary"%>
              <%= link_to "Booking Confirmation", booking_pdf_path(booking), class: "btn btn-success"%>
            </div>
          </div>
        </div>
        <div class="col-4">
          <%= cl_image_tag booking.property.photos[0].key, class:"w-100" %>
        </div>
      </div>
      <div class="card-footer text-muted">
        Booked on <%= booking.created_at %>
      </div>
    </div>
    <% end %>
  </div>
  </div>
